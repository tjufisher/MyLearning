<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="HorizScrollViewItem">
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:text">Sample Item</item>
    </style>

    <style name="main_tab">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@drawable/color_main_tab</item>
        <item name="android:textSize">@dimen/main_tab_text_size</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>
