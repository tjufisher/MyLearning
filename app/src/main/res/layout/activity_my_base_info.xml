<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeeeeee"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_gray2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/mine_gray2" />


        <RelativeLayout
            android:id="@+id/rl_header_photo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/tv_header_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="头像"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />


            <com.mylearning.view.RoundImageView
                android:id="@+id/riv_header_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:layout_toLeftOf="@+id/tv_header_photo_integral_text"
                app:outsideRoundColor="@color/gray_888"
                app:roundThickness="1dp"
                android:src="@drawable/lml"/>

            <TextView
                android:id="@+id/tv_header_photo_integral_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/mine_arrow_right" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>



        <RelativeLayout
            android:id="@+id/personal_mine_message"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/personal_mine_message_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="用户名"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/my_favorite_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/mine_arrow_right"
                android:text="4555df1a"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/tv_address_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="收货地址"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/mine_arrow_right"
                android:text="4个"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_gray2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/mine_gray2" />

        <RelativeLayout
            android:id="@+id/personal_mine_auth"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="账号设置"
                android:textColor="@color/mine_gray2"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_setting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="手机"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:text="186****1234"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_sign"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="微信"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_sign_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:text="未绑定"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_share"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="QQ"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/mine_arrow_right"
                android:text="未绑定"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_gray2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/mine_gray2" />

        <RelativeLayout
            android:id="@+id/personal_mine_help"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="安全设置"
                android:textColor="@color/mine_gray2"
                android:textSize="15sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_suggestion"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="密码"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_suggestion_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/mine_arrow_right"
                android:text="修改"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp"  />
        </RelativeLayout>







        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="12dp"
            android:background="@color/mine_gray2" />
    </LinearLayout>

</ScrollView>