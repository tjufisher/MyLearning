<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeeeeee"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_gray2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/mine_gray2" />

        <RelativeLayout
            android:id="@+id/personal_mine_base_info"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >


            <ImageView
                android:id="@+id/personal_mine_base_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentLeft="true"
                android:background="#eee"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/personal_mine_base_avatar"
                android:paddingLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/personal_mine_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="蓝天海水 Lv 3"
                    android:paddingBottom="2dp"
                    android:textColor="@color/mine_gray1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/personal_mine_winning_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:paddingTop="2dp"
                    android:text="今天/每天可中奖 4/6次"
                    android:textColor="@color/mine_gray3"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/daily_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_arrow_right" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_gray2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/mine_gray2" />

        <RelativeLayout
            android:id="@+id/personal_mine_bean"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="我的金豆"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_bean_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="金豆兑奖 详情 600"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/arrow_right"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_arrow_right" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_integral"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/personal_mine_integral_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="我的积分"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/personal_mine_integral_red_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/personal_mine_integral_label"
                android:src="@drawable/mine_red_point"
                />

            <TextView
                android:id="@+id/personal_mine_integral_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:text="我的等级 积分 3,106"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_comment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/personal_mine_comment_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="点评"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:text="我的点评 收藏"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_message"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/personal_mine_message_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="消息中心"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/personal_mine_message_red_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/personal_mine_message_label"
                android:src="@drawable/mine_red_point"
                />

            <TextView
                android:id="@+id/my_favorite_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray1"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_gray2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/mine_gray2" />

        <RelativeLayout
            android:id="@+id/personal_mine_auth"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="认证中心"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_auth_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:text="认证等级越高得金豆越多"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_setting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="设置"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:text="修改密码 填写兑换信息"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_sign"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="签到"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_sign_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:text="签到获得积分"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_share"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="分享得积分"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray1"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_gray2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/mine_gray2" />

        <RelativeLayout
            android:id="@+id/personal_mine_help"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="帮助说明"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_pink"
                android:textSize="14sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_suggestion"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="意见建议"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_suggestion_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray1"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_about"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="关于我们"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_about_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray1"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/mine_gray2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_mine_update"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_list_row"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="15dp"
                android:text="版本升级"
                android:textColor="@color/mine_gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/personal_mine_update_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="12dp"
                android:text="当前版本1.2"
                android:drawableRight="@drawable/mine_arrow_right"
                android:textColor="@color/mine_gray3"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="12dp"
            android:background="@color/mine_gray2" />
    </LinearLayout>

</ScrollView>