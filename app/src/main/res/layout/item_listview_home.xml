<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/rl_home_listview_item"
        android:layout_marginLeft="10dp"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="top"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/iv_home_listview_item"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:background="@drawable/loading"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#333333"
                android:textSize="16sp"
                android:text="美味烧烤"/>
            <TextView
                android:id="@+id/tv_sell_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textColor="#df3031"
                android:textSize="14sp"
                android:text="￥20.0"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ll_rate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RatingBar
                android:id="@+id/rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"

                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:rating="1"
                android:maxHeight="15dp"
                android:minHeight="15dp"/>
            <TextView
                android:id="@+id/tv_rate_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rb"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/gray_888"
                android:textSize="10sp"
                android:text="（100）"/>
            <TextView
                android:id="@+id/tv_sell_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_rate_num"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/gray_888"
                android:textSize="10sp"
                android:text="已售 200 份"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">
            <ImageView
                android:id="@+id/iv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/distance"
                android:textColor="@color/gray_888" />
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="6dip"
                android:layout_toRightOf="@+id/iv_distance"
                android:singleLine="true"
                android:textColor="@color/gray_888"
                android:textSize="10sp"
                android:text="0.4KM"/>
            <LinearLayout
                android:id="@+id/ll_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="6dip"
                android:layout_toRightOf="@+id/tv_distance"
                android:gravity="right"
                android:singleLine="true">
                <TextView
                    android:id="@+id/tv_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/header_bar"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:textSize="10sp"
                    android:text="量大"
                    android:background="@drawable/home_frame"/>
                <TextView
                    android:id="@+id/tv_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/header_bar"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:textSize="10sp"
                    android:text="实惠"
                    android:background="@drawable/home_frame"/>
                <TextView
                    android:id="@+id/tv_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/header_bar"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:textSize="10sp"
                    android:text="美味"
                    android:background="@drawable/home_frame"/>
            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="6dip"
                android:textColor="@color/gray_888"
                android:textSize="12sp"
                android:ellipsize="end"
                android:text="为保证产品质量，各分店有送餐范围限制。 达美乐全国订餐热线4001-597-597"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>